@model User

<div class="container mx-auto px-4 flex-column flex justify-center items-center mt-5">
    <div class="bg-white p-8 rounded shadow-md w-96 ">
        <h1 class="text-2xl font-semibold mb-6">Login</h1>
        @if(TempData["error"] != null)
        {
            <div class="flex justify-center">
                <p class="text-red-600">@TempData["error"]</p>
            </div>
        }
        @using (Html.BeginForm("LoginUser", "Login", FormMethod.Post))
        {
            <div class="mb-4">
                <label for="email" class="block text-gray-600 mb-2">Email</label>
                <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500" placeholder="seuemail@example.com" required asp-for="email">
            </div>
            <div class="mb-6">
                <label for="password" class="block text-gray-600 mb-2">Senha</label>
                <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring focus:border-blue-500" placeholder="Sua senha" required asp-for="password">
            </div>
            <button type="submit" class="w-full bg-gray-900 text-white py-2 px-4 rounded-lg hover:bg-gray-600 transition duration-200">Entrar</button>
        }

    </div>
</div>